{
    "compilerOptions": {
      "module": "node16",
      "moduleResolution": "node16",
      "lib": ["es2019"],
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es2018",
      "noImplicitAny": true,
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "typeRoots": [
        "./types",
        "node_modules/@types"
      ]
    },
    "include": [
      "src/**/*.ts"
    ]
  }
  